@{
//Дата    Задание     Ответственный       Комментарий
}

@model IEnumerable<SMScenterMVC.Models.DetailMailing>

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

@Html.ActionLink("Вернуться к списку заданий", "Index")
<br />
<br />
Число сообщений:@Model.Count()
<br />
<br />
@if (@Model.Count() > 0)
{
    <table>
        <tr>
            <th>
                Телефон
            </th>
            <th>
                Дата создания
            </th>
            <th>
                Дата обновления
            </th>
            <th>
                Статус
            </th>
            <th>
                Сообщение
            </th>
        </tr>
        
    @foreach (var item in Model)
    {    
        <tr>
            <td>
                @item.Phone
            </td>
            <td>
                @item.Create_at
            </td>
            <td>
                @item.Update_at
            </td>
            <td>
                @item.Status
            </td>
            <td>
                @item.Message
            </td>
        </tr>
    }

    </table>
    <br />
    @Html.ActionLink("Вернуться к списку заданий", "Index")
}

